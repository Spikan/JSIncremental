{
  "name": "soda-clicker-pro",
  "version": "0.0.0",
  "description": "Incremental game with modular architecture",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "vite build --mode analyze",
    "preview": "vite preview",
    "deploy": "echo 'Use GitHub Actions: Deploy to GitHub Pages workflow'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:debug": "vitest run --reporter=verbose",
    "performance": "node -e \"console.log('Performance monitoring available via performanceMonitor global')\"",
    "prepare": "husky",
    "quality": "npm run lint && npm run format:check && npm run type-check",
    "fix": "npm run lint:fix && npm run format",
    "css:optimize": "node scripts/header-fix-optimizer.js",
    "css:analyze": "node scripts/css-analyzer.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/howler": "^2.2.12",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-sonarjs": "^3.0.5",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "terser": "^5.43.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "break_eternity.js": "^2.1.2",
    "framer-motion": "^12.23.12",
    "glob": "^11.0.3",
    "grep": "^0.1.0",
    "head": "^1.0.0",
    "howler": "^2.2.4",
    "tail": "^2.2.6",
    "web-vitals": "^5.1.0",
    "zod": "^3.22.4",
    "zustand": "^5.0.8"
  }
}
