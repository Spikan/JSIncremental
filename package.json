    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.1",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.0.0",
    "typescript": "^5.9.2",
    "vite": "^5.0.0",
